{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "flutter",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart", // it comes by default
            // "deviceId": "c"
        },
        {
            "name": "flutter (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "dev_app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_dev.dart",
            "args": [
                "--flavor",
                "dev"
            ],
        },
        {
            "name": "stg_app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_stg.dart", 
            "args": [
                "--flavor",
                "stg"
            ],
        },
        {
            "name": "prod_app",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_prod.dart", 
            "args": [
                "--flavor",
                "prod"
            ],
        },
    ]
}